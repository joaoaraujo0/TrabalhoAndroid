<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuEstagiario"
        android:background="@color/seed">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVagasEstagio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/card_home"
            app:layout_constraintTop_toBottomOf="@+id/searchViewEstagiario"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewEstagiario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:queryHint="Escreva aqui...."
            android:layout_margin="8dp"
            android:background="@drawable/searchview_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
