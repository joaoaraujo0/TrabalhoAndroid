<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/seed"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfil_user_empresa"
            android:textSize="30sp"
            android:textColor="@color/preto"
            android:fontFamily="@font/open_sans_bold"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sairBotao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sair_perfil_empresa"
            android:backgroundTint="@color/md_theme_light_error"
            android:padding="8dp"
            android:layout_margin="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/imagemPerfilEmpresa"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/logoperfil"
            app:layout_constraintTop_toBottomOf="@+id/Perfil"
            android:contentDescription="Foto estagiario"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoTirarFotoEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tirar_foto_empresa"
            android:layout_margin="8dp"
            android:drawableEnd="@drawable/baseline_camera_alt_24"
            app:layout_constraintTop_toBottomOf="@+id/imagemPerfilEmpresa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nomePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomePerfil"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/md_theme_dark_secondary"
            android:padding="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/preto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botaoTirarFotoEmpresa"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/emailPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emailPerfil"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:background="@color/md_theme_dark_secondary"
            android:padding="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/preto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomePerfil"
            android:fontFamily="@font/roboto_medium"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/editarPerfilEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_empresa"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailPerfil"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
