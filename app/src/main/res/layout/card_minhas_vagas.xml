<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        tools:context=".MainActivity"
        app:cardCornerRadius="0dp">


        <LinearLayout
            android:background="@color/branco"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/nomeEmpresaMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nome da empresa: Microsoft"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/areaDaVagaMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="Área da vaga: Ti"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/localidadeMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="Localidade: São Paulo"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dataTerminoMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="Data termino da vaga: 06/06/2023"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/valorRemuneracaoMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="Remuneração: 2000"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:id="@+id/emailContatoMinhasVagas"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="E-mail de contato: microsoft@hotmail.com"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/telefoneContatoMinhasVagas"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="Telefone:(11)99555-1211 "
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:backgroundTint="@color/md_theme_light_tertiary"
                    android:id="@+id/editarVagasEmpresa"
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Editar"
                    android:textColor="@color/branco" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:backgroundTint="@color/md_theme_light_primary"
                    android:id="@+id/excluirvaga"
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:text="Excluir"
                    android:textColor="@color/branco" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>